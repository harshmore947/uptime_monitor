# Docker Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-secure-password-here
MONGO_URL=mongodb://admin:your-secure-password-here@mongo:27017/uptime_monitor?authSource=admin

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379

# Application Configuration
NODE_ENV=production
SECRET=your-very-strong-secret-key-here-change-this-in-production
PORT=3000

# Email Configuration
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@yourdomain.com

# Geographic Monitoring Configuration
MONITORING_REGION=us-east-1
MONITORING_CITY=New York
MONITORING_COUNTRY=USA
MONITORING_LATITUDE=40.7128
MONITORING_LONGITUDE=-74.0060

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com

# Additional Email Providers (choose one)
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# EMAIL_SERVICE=mailgun
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=yourdomain.com

# SSL Configuration (for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Performance Configuration
MAX_WORKERS=4
MEMORY_CACHE_SIZE=100MB
FILE_UPLOAD_SIZE=10MB
